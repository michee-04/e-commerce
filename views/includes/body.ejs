    document.addEventListener("DOMContentLoaded", function () {
const carrousel = document.getElementById("carrousel");

// Fonction pour basculer l'état en fonction de la position de défilement
function handleScroll() {
 const carrouselTop = carrousel.getBoundingClientRect().top;

 if (carrouselTop <= 0) {
   // Activer l'état lorsque le carrousel est en haut
   carrousel.classList.add("carousel-hide");
   carrousel.classList.remove("carousel-show");
 } else {
   // Réinitialiser à l'état normal
   carrousel.classList.add("carousel-show");
   carrousel.classList.remove("carousel-hide");
 }
}

// Attacher l'écouteur pour l'événement de défilement
window.addEventListener("scroll", handleScroll);

// Initialisation à l'ouverture de la page
handleScroll();
});
   </script>
