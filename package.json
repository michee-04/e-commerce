{
  "name": "e-commerce",
  "version": "1.0.1",
  "description": "A starter project for Node.js, Express, MongoDB, TypeScript, and more.",
  "main": "build/server.js",
  "scripts": {
    "build": "npx tsc -p .",
    "start:prod": "node .",
    "start": "npx nodemon src/server.ts",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,css,md,html,pug}'",
    "prepare": "husky install",
    "docker:launch": "bash ./bin/start.sh",
    "docker:launch:prod": "bash ./bin/start.sh --prod",
    "test": "jest",
    "test:dynamic": "ts-node run-test.ts",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md,html,pug}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "node.js",
    "express",
    "api",
    "typescript",
    "docker"
  ],
  "author": "Groupe 3 Gestion de projet",
  "license": "ISC",
  "dependencies": {
    "@nodesandbox/async-storage": "^0.2.1",
    "@nodesandbox/logger": "^0.1.2",
    "@nodesandbox/repo-framework": "^1.3.1",
    "@nodesandbox/response-kit": "^0.1.4",
    "@types/connect-flash": "^0.0.40",
    "@types/express-session": "^1.18.0",
    "@types/passport": "^1.0.17",
    "bcrypt": "^5.1.1",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-list-endpoints": "^7.1.0",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "minio": "^8.0.0",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "rate-limiter-flexible": "^5.0.3",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-brute": "^1.0.5",
    "@types/express-brute-mongo": "^0.0.39",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.13",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.15",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "prettier-plugin-pug": "^1.0.0-alpha.8",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
}
